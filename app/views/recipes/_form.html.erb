<label for="recipe_name">Name</label>
<input id="recipe_name" name="recipe[name]" type="text" value="<%= @recipe.name %>">
<label for="recipe_description">Description</label>
<textarea name="recipe[description]" type="text", rows="10" cols="55"><%= @recipe.description %></textarea>
<label for="tag_id">Tag</label>
<select name="tag_id">
    <% Tag.all.each do |tag| %>
      <option value="<%= tag.id %>"><%= tag.name %></option>
    <% end %>
</select>


