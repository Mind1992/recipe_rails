	<div class="form-group">
		<label for="recipe_name" class="col-sm-2 control-label">Name</label>
		<div class='col-sm-10'>
			<input id="recipe_name" placeholder="Name" class="form-control" name="recipe[name]" type="text" value="<%= @recipe.name %>">
		</div>
	</div>

	<div class="form-group">
		<label for="recipe_description" class="col-sm-2 control-label">Description</label>
		<div class="col-sm-10">
		<textarea name="recipe[description]" placeholder="Description" class="form-control" type="text", rows="8" cols="20"><%= @recipe.description %></textarea>
		</div>
	</div>
	<div class="form-group">
		<label for="tag_id" class="col-sm-2 control-label">Tag</label>
		<div class="col-sm-10">
			<select name="tag_id">
    		<% Tag.all.each do |tag| %>
      	<option value="<%= tag.id %>"><%= tag.name %></option>
    		<% end %>
			</select>
		</div>	
	</div>
