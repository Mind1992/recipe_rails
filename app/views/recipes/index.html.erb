<% content_for(:title, "Homepage | Recipes&Tags")%>
<h1>Recipes</h1>

<ul>
  <% @recipes.each do |recipe| %>
    <li><a href="recipes/<%= recipe.id %>"><%= recipe.name %></a></li>
  <% end %>
</ul>
<p><a href="/recipes/new">Add a recipe</a></p>

<h1>Tags</h1>
<ul>
  <% @tags.each do |tag| %>
    <li><a href="tags/<%= tag.id %>"><%= tag.name %></a></li>
  <% end %>
</ul>
<p><a href="/tags/new">Add a tag</a></p>


