<% content_for(:title, "Homepage | Recipes&Tags")%>
<div class="center hero-unit">
	<h1>Welcome to Recipe Editor</h1>
	<div class="left-column">
		<h2>Recipes</h2>
		<ul>
		  <% @recipes.each do |recipe| %>
		    <li><a href="recipes/<%= recipe.id %>"><%= recipe.name %></a></li>
		  <% end %>
		</ul>
		<p><a href="/recipes/new" class="btn btn-large btn-primary">Add a recipe</a></p>
	</div>
	<h2>Tags</h2>
	<ul>
	  <% @tags.each do |tag| %>
	    <li><a href="tags/<%= tag.id %>"><%= tag.name %></a></li>
	  <% end %>
	</ul>
	<p><a href="/tags/new" class="btn btn-large btn-primary">Add a tag</a></p>
</div>

